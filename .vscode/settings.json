{
    "editor.rulers": [
    120
  ],
  // Interpreter
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // Testing (unit by default)
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests/unit"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.cwd": "${workspaceFolder}",
  // Terminal environment (optional convenience; app still loads .env itself)
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/src",
    "LOG_LEVEL": "INFO"
  },
  // Ruff as formatter + on-save fixes/imports
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "ruff.enable": true,
  // Editor consistency
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  // Explorer + search exclusions (keep things fast/clean)
  "files.exclude": {
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true
  },
  "search.exclude": {
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true
  },
  // Pylance type checking (mypy is authoritative; keep editor helpful but not noisy)
  "python.analysis.typeCheckingMode": "basic",
  "mypy.runUsingActiveInterpreter": true,
  "mypy.dmypyExecutable": "${workspaceFolder}/.venv/bin/dmypy",
  "mypy.configFile": "pyproject.toml",
  "mypy.targets": [
    "src",
    "tests"
  ]
}
