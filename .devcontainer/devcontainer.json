{
  "name": "rules-lawyer-models (CUDA 12.8 / PyTorch cu128 / Python 3.11.14)",
  "dockerComposeFile": [
    "../compose.yaml"
  ],
  "service": "rules-lawyer-models",
  "workspaceFolder": "/workspace",
  "workspaceMountConsistency": "consistent",
  "mounts": [
    "source=${localEnv:HOME}/.1password/agent.sock,target=/ssh-agent,type=bind",
    "source=${localEnv:HOME}/.ssh/git_signing_key.pub,target=/root/.ssh/git_signing_key.pub,type=bind,readonly",
    "source=${localWorkspaceFolder}/.devcontainer/allowed_signers,target=/root/.ssh/allowed_signers,type=bind,readonly"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent",
    "VIRTUAL_ENV": "/opt/venv",
    "UV_PROJECT_ENVIRONMENT": "/opt/venv",
    "PATH": "/opt/venv/bin:${containerEnv:PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
