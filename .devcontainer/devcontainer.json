{
  "name": "rules-lawyer-models (CUDA 12.8 / PyTorch cu128 / Python 3.11.14)",
  "dockerComposeFile": [
    "../compose.yaml"
  ],
  "service": "rules-lawyer-models",
  "workspaceFolder": "/workspace",
  "workspaceMountConsistency": "consistent",
  "mounts": [
    "source=${localEnv:HOME}/.1password/agent.sock,target=/ssh-agent,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/git_signing_key.pub,target=/home/dev/.ssh/git_signing_key.pub,type=bind,readonly",
    "source=${localWorkspaceFolder}/.devcontainer/allowed_signers,target=/home/dev/.ssh/allowed_signers,type=bind,readonly"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent",
    "VIRTUAL_ENV": "/opt/venv",
    "UV_PROJECT_ENVIRONMENT": "/opt/venv",
    "PATH": "/opt/venv/bin:${containerEnv:PATH}"
  },
  "postCreateCommand": "mkdir -p \"$HOME/.ssh\" && git config --global user.name \"Erik Saltwell\" && git config --global user.email \"erik.saltwell@gmail.com\" && git config --global gpg.format ssh && git config --global commit.gpgsign true && git config --global user.signingkey \"$HOME/.ssh/git_signing_key.pub\" && git config --global gpg.ssh.allowedSignersFile \"$HOME/.ssh/allowed_signers\" && uv sync --frozen --inexact",
  "remoteUser": "dev",
  "containerUser": "dev",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
